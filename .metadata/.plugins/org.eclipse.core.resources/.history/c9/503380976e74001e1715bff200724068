<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mbti">
	<resultMap type="com.spring.board.vo.BoardVo" id="boardVo" >
		<id property="boardType" column="BOARD_TYPE"/>
	    <id property="boardNum" column="BOARD_NUM"/>
	    <result property="boardComment" column="BOARD_COMMENT"/>
	</resultMap>
	
	<select id="selectTestList" resultMap="boardVo">
		SELECT 
	    BOARD_TYPE
	    , BOARD_NUM
	    , BOARD_COMMENT
	    FROM
	    BOARD
	</select>

	<select id="totalCount" resultType="int">
		SELECT COUNT(*) FROM BOARD
	</select>

	<select id="selectTestListPaged" parameterType="com.spring.board.vo.BoardVo" resultType="boardVo">
	    SELECT 
	    BOARD_TYPE
	    , BOARD_NUM
	    , BOARD_COMMENT
	    FROM
	    BOARD
	    WHERE NUMROW BETWEEN (#{pageNo}-1)*5 + 1 AND (#{.pageNo})*5
	</select>
</mapper>