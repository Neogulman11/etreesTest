                <a align="center">${board.boardComment}</a> <br>
                <div>
	                <a>동의</a>
	                <input type="radio" name="selectedRadio_${board.boardNum}" value="3" onclick="updateSession(${board.boardType}, 3)">
	                <input type="radio" name="selectedRadio_${board.boardNum}" value="2" onclick="updateSession(${board.boardType}, 2)">
	                <input type="radio" name="selectedRadio_${board.boardNum}" value="1" onclick="updateSession(${board.boardType}, 1)">
	                <input type="radio" name="selectedRadio_${board.boardNum}" value="0" onclick="updateSession(${board.boardType}, 0)">
	                <input type="radio" name="selectedRadio_${board.boardNum}" value="-1" onclick="updateSession(${board.boardType}, -1)">
	                <input type="radio" name="selectedRadio_${board.boardNum}" value="-2" onclick="updateSession(${board.boardType}, -2)">
	                <input type="radio" name="selectedRadio_${board.boardNum}" value="-3" onclick="updateSession(${board.boardType}, -3)">
	                <a>비동의</a>
                </div>
            
            </fieldset>
        </c:forEach>
        <c:if test="${totalCnt > currentPage.pageNo * 5}">
		    <form action="/mbti/mbtiTest.do" method="GET">
		        <input type="hidden" name="pageNo" id="pageNo" value="${currentPage.pageNo}" />
		        <input type="submit" value="다음" onclick="nextSubmit()" />
    		</form>	
		</c:if>
		
		<c:if test="${currentPage.pageNo * 5 >= totalCnt}">
		    <button id="submitButton" onclick="submitSessionValues()">제출하기</button>
