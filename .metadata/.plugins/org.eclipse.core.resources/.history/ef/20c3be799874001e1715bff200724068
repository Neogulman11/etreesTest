<script>
	function updateSession(boardType, value) {
	    // 세션 스토리지에서 해당 게시물의 현재 값을 가져옵니다.
	    var sessionValue = sessionStorage.getItem('boardType_' + boardType);
	
	    if (sessionValue !== null) {
	        // 현재 값이 이미 저장되어 있다면, 새로운 값을 현재 값에 더합니다.
	        var updatedValue = parseInt(sessionValue) + parseInt(value);
	        sessionStorage.setItem('boardType_' + boardType, updatedValue.toString());
	    } else {
	        sessionStorage.setItem('boardType_' + boardType, value.toString());
	    }
	}
	
	function nextSubmit() {
        var radioButtons = document.querySelectorAll('input[type="radio"]:checked');
        if (radioButtons.length < 5) {
            alert("선택되지 않은 항목이 있습니다.");
            event.preventDefault();
        } else {
            var pageNoInput = document.getElementById("pageNo");
            var currentPage = parseInt(pageNoInput.value);
            pageNoInput.value = currentPage + 1;
            
            var currentURL = window.location.href;
            var newURL = currentURL.replace(/pageNo=\d+/, "pageNo=" + (currentPage + 1));
            window.location.href = newURL;
            
            
        }
    }
	
	// 제출 버튼 클릭 시 세션 값을 서버로 전송
	function submitSessionValues() {
	    // 여기에 세션 값을 서버로 전송하는 코드 추가
	}
	
</script>
